        <div class="t">
          <form action="transactions" method="POST">
            <h2 align="center">Transaction Window</h2><br>
            <h4 id="one" class="two">From:  </h4>
            <h4 id="one" class="oneclass">Recipient:</h4>
            <input class="twoclass"type="text"  readonly value="<%=names%>" name="sender">
            <select name="recipient">
              <%data.forEach(data1=>{%>
              <option value="<%=data1.name%>"><%=data1.name%></option>
              <%})%> 
            </select>
            <span id="arrow">&#129070;</span><br>
            <input  id="amount"type="text" placeholder="Enter the amount (INR)" name="amount"><br><br><br><br>
            <button onclick="pop()" type="submit" class="btn btn-danger">Transfer Fund</button>
          </form>
